{
  "targetUI": "title_screen",
  "elements": {
    "singleplayer": {
      "type": "modify_widget",
      "y": "${singleplayer.y}-9",
      "message": "Play Game",
      "height": 30,
      "spriteOverlay": "factory_api:bad"
    },
    "buttons": {
      "type": "modify_widget",
      "range": "1,2,4,5",
      "width": 200,
      "x": "${singleplayer.x}",
      "y": "${singleplayer.y}+${singleplayer.height}+4+24*${buttons.index}"
    },
    "checkbox": {
      "type": "add_checkbox",
      "selected": false,
      "x": "${buttons_5.x}+${buttons_5.width}+24",
      "y": "${buttons_5.y}",
      "actions": {
        "reload_ui": {},
        "open_default_screen": {
          "applyCondition": "!${checkbox.selected}",
          "value": "language_select"
        }
      }
    },
    "lang": {
      "applyCondition": "${checkbox.selected}",
      "type": "modify_widget",
      "index": 3,
      "y": "${buttons_4.y}"
    },
    "access": {
      "type": "modify_widget",
      "index": 6,
      "y": "${buttons_4.y}"
    }
  }
}