{
  "targetUI": "container_screen",
  "applyCondition": "${windowHeight}>=720",
  "elements": {
    "leftPos": "${leftPos}-20",
    "background": {
      "type": "blit_sprite",
      "sprite": "popup/background",
      "x": "${leftPos}",
      "y": "${topPos}",
      "width": "${imageWidth}",
      "height": "${imageHeight}"
    },
    "big_text": {
      "type": "draw_string",
      "component": "A BIG TES(X)T",
      "translateX": "(${width}-${big_text.component.width}*2.5)/2",
      "translateY": "(${height}-7*2.5)/2",
      "color": "#FF00FF",
      "shadow": true,
      "scaleX": 2.5,
      "scaleY": 2.5
    },
    "diamond": {
      "type": "render_item",
      "item": {
        "common_item": "generic_9x3.slot.0"
      },
      "translateX": "(${width}-16*${diamond.scaleX})/2-80",
      "translateY": "(${height}-16*${diamond.scaleY})/2",
      "scaleX": 4,
      "scaleY": 4
    },
    "hasBackground": {
      "type": "put_boolean",
      "boolean": false
    },
    "hasContainerBackground": {
      "type": "put_boolean",
      "boolean": false
    }
  }
}